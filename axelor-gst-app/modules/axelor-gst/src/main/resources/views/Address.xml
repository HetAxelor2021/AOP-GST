<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
	  <grid name="address-grid" title="Addresses" model="com.axelor.gst.db.Address" >
	  	<field name="type" />
	  	<field name="line1" />
	  	<field name="line2" />
	  	<field name="city" />
	  	<field name="state" />
	  	<field name="country" />
	  	<field name="pinCode" />
	  </grid>
	  
	  <form name="address-form" title="Address" model="com.axelor.gst.db.Address">
	  	<panel title="Address Details">
	  		<field name="type" />
	  		<field name="line1" index="true"/>
	  		<field name="line2" />
	  		<!-- <field name="city" canNew="true" />
	  		<field name="state" canNew="tr /> -->
	  		<field name="city" canNew="true" onChange="action-address-onchange-city-method"/>
	  		<field name="state" canNew="true" domain="self.state.name = self.city.state" onChange="action-address-onchage-state"/> 
	  		<field name="country" canNew="true" domain="self.country.name= self.state.country"/>
	  		<field name="pinCode" />
	  		<field name="state.name" />
	  	</panel>	
	  </form>
	  
	<action-method name="action-address-onchange-city-method" >
		<call class="com.axelor.gst.web.InvoiceController" method="cityData" />
	</action-method>
	 
