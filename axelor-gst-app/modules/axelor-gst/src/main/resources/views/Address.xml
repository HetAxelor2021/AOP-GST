<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
	  <grid name="address-grid" title="Addresses" model="com.axelor.gst.db.Address" >
	  	<field name="type" />
	  	<field name="line1" />
	  	<field name="line2" />
	  	<field name="city" />
	  	<field name="state" />
	  	<field name="country" />
	  	<field name="pinCode" />
	  </grid>
	  
	  <form name="address-form" title="Address" model="com.axelor.gst.db.Address">
	  	<panel title="Address Details">
	  		<field name="type" />
	  		<field name="line1" index="true"/>
	  		<field name="line2" />
	  		<field name="city" canNew="true" onChange="action-address-onchange-city"/>
	  		<field name="state" canNew="true" onChange="action-address-onchage-state"/>
	  		<field name="country" canNew="true"/>
	  		<field name="pinCode" />
	  		
	  	</panel>	
	  </form>
	  

	 
	  <action-record name="action-address-onchange-city" model="com.axelor.gst.db.Address" >
	  	
	  
	  	<field name="state.name" expr="eval:city.state" if="!city.state.equals('')"/>
	  	<field name="country.name" expr="eval:city.country" if="!city.country.equals('')"/> 
	  </action-record>
	  
	  <action-record name="action-address-onchage-state" model="com.axelor.gst.db.Address">
	  	<field name="country.name" expr="eval:state.country" if="state.country" />
	  </action-record>
    
 </object-views>