<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="invoice-line-grid" title="Invoice Lines" model="com.axelor.gst.db.InvoiceLine" >
		<field name="product" />
		<field name="hsbn" />
		<field name="item" />
		<field name="qty" />
		<field name="price" />
		<field name="netAmount" />
		<field name="gstRate" />
		<field name="igst" />
		<field name="sgst" />
		<field name="cgst" />
		<field name="grossAmount" />
		<field name="invoice" />
	</grid>
	
	<form name="invoice-line-form" title="Invoice Line" model="com.axelor.gst.db.InvoiceLine"  >
		<panel title="Invoice Line Detail">
			<field name="product" onChange="action-invoice-line-method-product-name"/>
			<field name="hsbn" />
			<field name="item" />
			<field name="qty" onChange="action-invoice-line-record-gst-calc"/>
			<field name="price" onChange="action-invoice-line-record-gst-calc" />
			<field name="netAmount" />
			<field name="gstRate" />
			<field name="igst" />
			<field name="sgst" />
			<field name="cgst" />
			<field name="grossAmount" />
			<field name="invoice" />	
		</panel>
	</form>
	
	<action-method name="action-invoice-line-method-product-name" >
		<call class="com.axelor.gst.web.InvoiceController" method="itemNameMaker" />
	</action-method>
	
		<action-record name="action-invoice-line-record-gst-calc" model="com.axelor.gst.db.Invoice">
			<field name="netAmount" expr="eval:qty*price" />
			<!-- 
				<field name="igst" expr = "eval:netAmount*gstRate" if="eval:_parent.company.address.state.getName().equals('surat')" />
			 -->	
		<!-- 	<field name="igst" expr = "eval:netAmount*gstRate" if="eval:_parent.company.address.state.getName(equals(_parent.invoiceAddress.state.getName()))" /> -->
			<!-- <field name="sgst" expr="eval:netAmount*(gstRate/2)" if="_parent.company.address.getState().equals(_parent.invoiceAddress.getState())"/>
			<field name="cgst" expr="eval:netAmount*(gstRate/2)" if="_parent.company.address.getState().equals(_parent.invoiceAddress.getState())"/>
			<field name="grossAmount" expr="eval:netAmount+igst" if="!_parent.company.address.getState().equals(_parent.invoiceAddress.getState())"/>
			<field name="grossAmount" expr="eval:netAmount+sgst+cgst" if="_parent.company.address.getState().equals(_parent.invoiceAddress.getState())"/>
			 -->
			 
		</action-record>
