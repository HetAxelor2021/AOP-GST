<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
	
	<grid name="product-grid" model="com.axelor.gst.db.Product" title="Products">
		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="category" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="image" />
		<field name="gstRate" />
	</grid>
	
	<form name="product-form" model="com.axelor.gst.db.Product" title="Product" >
		<panel title="Details of Product">
			<field name="name" />
			<field name="code" />
			<field name="hsbn" />
			<field name="category" />
			<field name="salePrice" />
			<field name="costPrice" />
			<field name="image" widget="image"/>
			<field name="gstRate" />
		</panel>
	</form>
	
	<cards name="product-cards" model="com.axelor.gst.db.Product" title="Product Cards" width="300px" >
		<field name="name" />
		<field name="code" />
		<field name="hsbn" />
		<field name="category" />
		<field name="salePrice" />
		<field name="costPrice" />
		<field name="image" />
		<field name="gstRate" />
		<template>
		<![CDATA[
			<div class="span4 card-image">
				<img ng-src="{{$image(null,'image')}}" />
			</div>
			<div class="span8">
			<strong>{{name}}</strong>
			<br/>
			<strong>{{code}}</strong>
			<br/>
			<strong>{{hsbn}}</strong>
			<br/>
			<strong>{{category}}</strong>
			<br />
			<strong>{{salePrice}}</strong>
			<strong>{{costPrice}}</strong>
			<br/>
			<strong>{{image}}</strong>
			<br />
			<strong>{{gstRate}}</strong>
			</div>
		
		]]>
			
		</template>
	
	</cards>
  
 </object-views>